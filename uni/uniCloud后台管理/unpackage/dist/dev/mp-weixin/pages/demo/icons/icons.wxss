
.icons {
	display: -webkit-box;
	display: flex;
	flex-wrap: wrap;
}
.icon-item {
	display: -webkit-box;
	display: flex;
	width: 16.6%;
	height: 120px;
	font-size: 30px;
	text-align: center;
	-webkit-box-pack: center;
	        justify-content: center;
	-webkit-box-align: center;
	        align-items: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	        flex-direction: column;
}
.icon-item:hover,
.icon-item:hover .icon-text {
	color: #007AFF;
}
.icon-text {
	color: #99a9bf;
	font-size: 12px;
	text-align: center;
	height: 1em;
	line-height: 1em;
	margin-top: 15px;
}











